= simple_form_for item, url: invoice_items_path do |f|
  = f.input :name_of_service, label: t('items.name_of_service')
  = f.input :pkwiu, label: t('items.pkwiu')
  = f.input :qty, label: t('items.qty_new')
  = f.input :unit, collection: Item::Unit, prompt: t('items.select_unit'), label:t('items.unit')
  = f.input :unit_net_price, label:t('items.unit_price')
  = f.input :vat_rate, collection: [0.08, 0.23], label:t('items.vat_rate')
  = f.button :submit
