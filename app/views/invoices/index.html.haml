%table
  %tr
    %th= t('invoices.number_of_invoice')
    %th= t('invoices.seller')
    %th= t('invoices.buyer')
  - invoices.each do |invoice|
    %tr
      %td= invoice.number_of_invoice
      %td= invoice.own_company.company_name
      %td= invoice.other_company.company_name
      %td= link_to t('invoices.new_item_invoice'), new_invoice_item_path(invoice.id)

= link_to t('invoices.new_invoice'), new_invoice_path
= link_to t('return'), users_path
