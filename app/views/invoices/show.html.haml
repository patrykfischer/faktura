= wicked_pdf_stylesheet_link_tag 'body'
%meta{ charset: 'utf-8' }
.container
  .content.invoices
    %h1
      Faktura
      = invoice.number_of_invoice
    %p
      Data sprzedaży:
      = invoice.data_of_sold
    %p
      Data wystawienia:
      = invoice.data_build

    %table.table-bordered
      %tr
        %th Lp.
        %th Nazwa
        %th Ilość
        %th Jednostka
        %th Cena jednostkowa
        %th Wartość Netto
        %th Stawka VAT
        %th Wartość VAT
        %th Cena całkowita
      - invoice.items.each do |item|
        %tr
          %td
          %td= item.name_of_service
          %td= item.qty
          %td= item.unit
          %td= item.unit_net_price
          %td= item.total_net_price
          %td= item.vat_rate
          %td= item.vat_amount
          %td= item.total_gross_price

    %table.table-bordered
      %tr
        %th Stawki VAT
        %th Obrót Netto
        %th Kwota VAT
        %th Obród Brutto
      %tr
        %td Vat 23%
      %tr
        %td Vat 8%
      %tr
        %td Razem
